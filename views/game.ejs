<!-- Enhanced game.ejs template with better team display -->
<div class="game-container">
  <div class="game-header">
    <div class="game-info">
      <h1><%= game.name %></h1>
      <div class="game-meta">
        <span class="week-indicator">Week <%= week %></span>
        <span class="pot-size">üí∞ $<%= pot %></span>
        <span class="player-count">üë• <%= game.players.length %>/<%= game.maxPlayers %></span>
      </div>
    </div>
    
    <% if (weekLocked) { %>
      <div class="week-status locked">
        <span class="status-icon">üîí</span>
        <span>Week <%= week %> Locked</span>
      </div>
    <% } else { %>
      <div class="week-status open">
        <span class="status-icon">‚è∞</span>
        <span>Picks Due Soon</span>
      </div>
    <% } %>
  </div>

  <!-- Current Week Schedule -->
  <div class="schedule-section">
    <h2>Week <%= week %> Games</h2>
    <div class="games-grid">
      <% schedule.forEach(match => { %>
        <% 
          const gameTime = formatGameTime(match.kickoff);
          const homeTeam = getTeamInfo(match.home);
          const awayTeam = getTeamInfo(match.away);
          const isUserPick = userPick === match.home || userPick === match.away;
          const isUsedTeam = pickedTeamsAllWeeks.includes(match.home) || pickedTeamsAllWeeks.includes(match.away);
        %>
        <div class="game-card <%= isUserPick ? 'user-pick' : '' %> <%= isUsedTeam ? 'used-team' : '' %>">
          <div class="game-time">
            <div class="date"><%= gameTime.date %></div>
            <div class="time"><%= gameTime.time %> ET</div>
          </div>
          
          <div class="matchup">
            <div class="team away-team <%= userPick === match.away ? 'selected' : '' %>">
              <img src="<%= awayTeam.logo %>" alt="<%= awayTeam.fullName %>" class="team-logo">
              <div class="team-info">
                <div class="team-name"><%= match.away %></div>
                <div class="team-record">@ <%= homeTeam.city %></div>
              </div>
              <% if (pickedTeamsAllWeeks.includes(match.away)) { %>
                <span class="used-indicator">‚úì</span>
              <% } %>
            </div>
            
            <div class="vs-divider">@</div>
            
            <div class="team home-team <%= userPick === match.home ? 'selected' : '' %>">
              <img src="<%= homeTeam.logo %>" alt="<%= homeTeam.fullName %>" class="team-logo">
              <div class="team-info">
                <div class="team-name"><%= match.home %></div>
                <div class="team-record"><%= homeTeam.city %></div>
              </div>
              <% if (pickedTeamsAllWeeks.includes(match.home)) { %>
                <span class="used-indicator">‚úì</span>
              <% } %>
            </div>
          </div>
          
          <% if (!weekLocked) { %>
            <div class="pick-actions">
              <% if (!pickedTeamsAllWeeks.includes(match.away)) { %>
                <form method="POST" action="/games/<%= game.id %>/pick" style="display: inline;">
                  <input type="hidden" name="team" value="<%= match.away %>">
                  <button type="submit" class="pick-btn <%= userPick === match.away ? 'selected' : '' %>">
                    Pick <%= match.away %>
                  </button>
                </form>
              <% } %>
              
              <% if (!pickedTeamsAllWeeks.includes(match.home)) { %>
                <form method="POST" action="/games/<%= game.id %>/pick" style="display: inline;">
                  <input type="hidden" name="team" value="<%= match.home %>">
                  <button type="submit" class="pick-btn <%= userPick === match.home ? 'selected' : '' %>">
                    Pick <%= match.home %>
                  </button>
                </form>
              <% } %>
            </div>
          <% } %>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Players Section -->
  <div class="players-section">
    <h2>Players (<%= playersDetailed.length %>)</h2>
    <div class="players-grid">
      <% playersDetailed.forEach(player => { %>
        <div class="player-card <%= player.eliminated ? 'eliminated' : '' %>">
          <div class="player-avatar">
            <% if (player.avatarUrl) { %>
              <img src="<%= player.avatarUrl %>" alt="<%= player.displayName %>">
            <% } else { %>
              <div class="avatar-placeholder"><%= player.displayName.charAt(0).toUpperCase() %></div>
            <% } %>
          </div>
          
          <div class="player-info">
            <div class="player-name">
              <%= player.displayName %>
              <% if (player.id === game.creatorId) { %>
                <span class="creator-badge">üëë</span>
              <% } %>
            </div>
            
            <div class="player-pick">
              <% if (player.eliminated) { %>
                <!-- Eliminated status is shown inline with the name -->
              <% } else if (player.pick) { %>
                <% const pickTeam = getTeamInfo(player.pick); %>
                <div class="current-pick">
                  <img src="<%= pickTeam.logo %>" alt="<%= pickTeam.fullName %>" class="pick-logo">
                  <span><%= player.pick %></span>
                </div>
              <% } else { %>
                <span class="no-pick">‚è≥ No pick yet</span>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Game Actions -->
  <div class="game-actions">
    <a href="/games/<%= game.id %>/details" class="btn btn-outline">üìä Full Details</a>
    <a href="/lobby" class="btn btn-outline">‚Üê Back to Lobby</a>
    
    <% if (game.visibility === 'private' && game.joinKey) { %>
      <div class="invite-section">
        <h3>Invite Players</h3>
        <p>Share this join key: <strong><%= game.joinKey %></strong></p>
        <p>Or share this link:</p>
        <input type="text" readonly value="<%= `${req.protocol}://${req.get('host')}/games/${game.id}?key=${game.joinKey}` %>" 
               onclick="this.select()" class="invite-link">
      </div>
    <% } %>
  </div>
</div>

